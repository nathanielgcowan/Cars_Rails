<%= form_for @car  do |f| %>
    <% if @car.errors.any? %>
        <div id="error_explanation">
            <h2>There were some errors:</h2>
            <ul>
                <% @car.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <%# Form to fill out %>
    <%= f.label :make %>
    <%= f.text_field :make %><br>
    <%= f.label :model %>
    <%= f.text_field :model %><br>
    <%= f.label :year %>
    <%= f.number_field :year %><br>
    <%= f.label :rating %>
    <%= f.number_field :rating %><br>
    <%= f.collection_select :vehicle_name, Vehicle.all, :name, :name %>
    <%= f.submit %>
<% end %>
